<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".E_books">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/book11"
                android:layout_width="185dp"
                android:layout_height="250dp"
                android:background="@drawable/book1" />

            <ImageView
                android:id="@+id/book22"
                android:layout_width="185dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/book2"
                android:baselineAligned="false" />

            <ImageView
                android:id="@+id/book33"
                android:layout_width="185dp"
                android:layout_height="250dp"
                android:layout_below="@+id/book11"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-2dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/book3" />

            <ImageView
                android:id="@+id/book44"
                android:layout_width="185dp"
                android:layout_height="250dp"
                android:layout_below="@+id/book22"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/book4" />



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>